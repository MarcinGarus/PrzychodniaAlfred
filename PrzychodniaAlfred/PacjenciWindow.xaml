<Window x:Class="PrzychodniaAlfred.PacjenciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pacjenci" Height="500" Width="800" Background="#FF96A4F3">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        
        <ListBox x:Name="listaPacjentow" Grid.Column="0" FontSize="14" />

        
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Dodaj pacjenta" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Imię"/>
            <TextBox x:Name="txtImie" Margin="0,0,0,5"/>

            <TextBlock Text="Nazwisko"/>
            <TextBox x:Name="txtNazwisko" Margin="0,0,0,5"/>

            <TextBlock Text="PESEL"/>
            <TextBox x:Name="txtPesel" Margin="0,0,0,5"/>

            <TextBlock Text="Data urodzenia"/>
            <DatePicker x:Name="dpDataUrodzenia" Margin="0,0,0,5"/>

            <TextBlock Text="Telefon"/>
            <TextBox x:Name="txtTelefon" Margin="0,0,0,5"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <Button Content="Dodaj pacjenta" Click="BtnDodajPacjenta_Click"/>
        </StackPanel>
    </Grid>
</Window>
